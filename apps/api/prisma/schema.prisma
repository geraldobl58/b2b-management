// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  name      String
  password  String // Optional for OAuth/SSO
  avatarUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
